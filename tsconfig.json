{
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2019",
    "lib": ["esnext"],
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "baseUrl": "packages",
    "paths": {
      "k8test": ["core/src/index.ts"],
      "k8test-monitoring": ["monitoring/src/index.ts"],
      "k8s-api": ["k8s-api/src/index.ts"],
      "k8test-log": ["log/src/index.ts"]
    }
  }
}
